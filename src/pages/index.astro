---
import { Image } from "astro:assets";
import Logo from "@/assets/images/papua-land.png";

import MainLayout from "@/layouts/MainLayout.astro";
import Link from "@/components/Link.astro";

import { ArrowRight } from "lucide-react";

const menuList = [
  {
    title: "FAQ",
    description:
      "Pertanyaan yang sering diajukan tentang Papua dan jawabannya.",
    link: "/faq/",
  },
  {
    title: "Glosarium",
    description: "Kumpulan istilah penting terkait Papua dan penjelasannya.",
    link: "/glosarium/",
  },
  {
    title: "Galeri",
    description:
      "Koleksi foto yang menampilkan keindahan alam dan budaya Papua.",
    link: "/galeri/",
  },
  {
    title: "Jejak Sejarah",
    description:
      "Pengantar ringkas tentang sejarah Papua dan peristiwa-peristiwa penting yang membentuknya hingga saat ini.",
    link: "/sejarah/",
  },
  {
    title: "Keragaman Budaya",
    description:
      "Gambaran umum tentang suku-suku, bahasa, dan tradisi masyarakat Papua.",
    link: "/budaya/",
  },
  {
    title: "Alam Papua",
    description:
      "Pengenalan terhadap geografi, keanekaragaman hayati, dan lingkungan alam Papua.",
    link: "/alam/",
  },
  {
    title: "Papua Kontemporer",
    description:
      "Konteks dan situasi Papua saat ini, termasuk perkembangan sosial, ekonomi, dan politik terkini.",
    link: "/kontemporer/",
  },
  {
    title: "Tokoh Papua",
    description:
      "Profil tokoh-tokoh penting dari Papua yang berkontribusi dalam berbagai bidang.",
    link: "/tokoh/",
  },
  {
    title: "Sumber Bacaan",
    description:
      "Rekomendasi buku, artikel, dan tautan berguna untuk mempelajari Papua lebih lanjut.",
    link: "/bacaan/",
  },
  {
    title: "Cara Berkontribusi",
    description:
      "Informasi tentang cara ikut menambah atau memperbaiki konten di situs ini.",
    link: "/kontribusi/",
  },
];
---

<MainLayout title="Home" description="Welcome to the Astro Starter Kit">
  <main
    class="flex flex-col items-center justify-center text-center mb-16 relative"
  >
    <div class="grid place-content-center bg-white px-4">
      <div class="text-center">
        <Image
          src={Logo}
          class="mx-auto h-56 w-auto text-black sm:h-64"
          alt="Logo Belajar Tentang Papua"
        />
        <h1 class="block text-gray-700 font-bold font-poppins text-4xl -mt-36">
          <span class="relative px-1">
            <div
              class="absolute inset-x-0 bottom-0 h-2 transform -skew-x-12 bg-gray-300/50"
            >
            </div>
            <span class="relative inline-block">Belajar</span>
          </span> Tentang Papua
        </h1>
      </div>
    </div>
    <div class="max-w-screen-lg px-0 sm:px-6 pb-10 pt-36 mx-auto">
      <div class="text-center border-2 border-dashed border-gray-400 p-4">
        <p class="mx-auto text-gray-500">
          "Kumpulan informasi sederhana tentang Papua. Dibuat secara kolaboratif
          dan bersifat open source."
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 w-full max-w-4xl my-10">
        {
          menuList.slice(0, 3).map((menu) => (
            <Link
              href={menu.link}
              class="border rounded-md p-6 hover:shadow-md transition-shadow group"
            >
              <div class="flex justify-between items-start mb-2">
                <h2 class="text-xl font-semibold text-slate-700">
                  {menu.title}
                </h2>
                <ArrowRight className="h-5 w-5 text-slate-400 group-hover:text-slate-700 transition-colors" />
              </div>
              <p class="text-slate-600 text-sm text-left">{menu.description}</p>
            </Link>
          ))
        }
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-4xl">
        {
          menuList.slice(3, -1).map((menu) => (
            <Link
              href={menu.link}
              class="border rounded-md p-6 hover:shadow-md transition-shadow group"
            >
              <div class="flex justify-between items-start mb-2">
                <h2 class="text-xl font-semibold text-slate-700">
                  {menu.title}
                </h2>
                <ArrowRight className="h-5 w-5 text-slate-400 group-hover:text-slate-700 transition-colors" />
              </div>
              <p class="text-slate-600 text-sm text-left">{menu.description}</p>
            </Link>
          ))
        }
      </div>

      <div class="grid grid-cols-1 w-full max-w-4xl mt-6">
        {
          menuList.slice(-1).map((menu) => (
            <Link
              href={menu.link}
              class="border rounded-md p-6 hover:shadow-md transition-shadow group md:col-span-2"
            >
              <div class="flex justify-between items-start mb-2">
                <h2 class="text-xl font-semibold text-slate-700">
                  {menu.title}
                </h2>
                <ArrowRight className="h-5 w-5 text-slate-400 group-hover:text-slate-700 transition-colors" />
              </div>
              <p class="text-slate-600 text-sm text-left">{menu.description}</p>
            </Link>
          ))
        }
      </div>
    </div>
  </main>
</MainLayout>
